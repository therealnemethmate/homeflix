{
    "compilerOptions": {
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "lib": ["esnext", "dom"],
        "skipLibCheck": true,
        "declaration": true,
        "target": "ESNext",
        "outDir": "dist/",
        "module": "ESNext",
        "baseUrl": "."
    },
    "exclude": [
        "node_modules",
        "dist"
    ],
    "include": [
        "src/**/*",
    ],
}
